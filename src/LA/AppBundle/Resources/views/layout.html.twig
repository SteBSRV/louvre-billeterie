{# src/LA/AppBundle/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#121212">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

    <title>{% block title %}Musée du Louvre{% endblock %}</title>

    {% block stylesheets %}
      {% stylesheets 'bundles/laapp/css/bootstrap.min.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
      {% endstylesheets %}
      {% stylesheets 'bundles/laapp/css/louvre.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
      {% endstylesheets %}
    {% endblock %}
  </head>

  <body id="page-top" class="index">
  <!-- Navigation -->
    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('la_app_homepage') }}">Musée du Louvre</a>
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="navbar-main">
                <ul class="nav navbar-nav navbar-right">
                    <li class="hidden">
                        <a href="#page-top"></a>
                    </li>
                    <li>
                        <a href="{{ path('la_app_homepage') }}">Accueil</a>
                    </li>
                    <li>
                        <a href="{{ path('la_ticketing_info') }}">Tarifs - Informations</a>
                    </li>
                    <li>
                        <a href="{{ path('la_ticketing_command') }}">Commander des tickets</a>
                    </li>
                    <li>
                        <a href="{{ path('la_app_contact') }}">Contact</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>

    <div id="header">
      <div class="container">
      </div>
    </div>

    <div class="container">

    <div class="row">
      <div id="content" class="col-sm-12 col-md-8">
        {% block body %}
        {% endblock %}
      </div>
      <div id="right-widget" class="col-md-4 ticket-stats hidden-sm hidden-xs">
        <h2>Actuellement</h2>
        {{ render(controller("LATicketingBundle:Ticketing:stats")) }}
      </div>
    </div>

    <footer>
      <div class="row">
        <div class="col-lg-12 text-center">
          <p>Musée du Louvre © {{ 'now'|date('Y') }}</p>
        </div>
      </div>
    </footer>
  </div>

  {% block javascripts %}
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  {% endblock %}

  </body>
</html>
